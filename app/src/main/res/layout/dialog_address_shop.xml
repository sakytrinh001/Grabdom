<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_white_tim">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_dialog"
        android:textColor="@color/colorTim"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_5dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_address"
        android:gravity="center"
        android:textColor="@color/colorTim"
        android:layout_marginTop="@dimen/margin_5dp"
        />
    <Spinner
        android:id="@+id/spinner_product"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/btn_white_tim"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/spinner_district"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/btn_white_tim"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/spinner_city"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/btn_white_tim"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edt_street"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_white_tim"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">
        <Button
            android:id="@+id/btnCancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/status_cancel"
            android:background="@drawable/btn_border_background_tim"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/margin"/>
        <Button
            android:id="@+id/btnOK_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/ok"
            android:background="@drawable/btn_border_background_tim"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin"
            />
    </LinearLayout>

</LinearLayout>